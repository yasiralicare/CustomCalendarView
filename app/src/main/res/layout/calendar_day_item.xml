<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dip"
    android:background="@drawable/calendar_cell">

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0000D7"
        android:textSize="9sp"
        android:textStyle="bold"
        android:text="2"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp">
    </TextView>

    <LinearLayout
        android:id="@+id/eventTextContainer"
        android:layout_marginLeft="2dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/date"
        android:orientation="vertical"
        android:weightSum="4">

        <com.yasirali.customcalendarview.ui.EventTitleTextView
            android:id="@+id/eventTitle1"
            android:layout_weight="1.1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:text="12132313asdasdadasdasd"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp" />

        <com.yasirali.customcalendarview.ui.EventTitleTextView
            android:id="@+id/eventTitle2"
            android:layout_weight="1.1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:text="12132313"
            android:layout_marginBottom="1dp" />

        <com.yasirali.customcalendarview.ui.EventTitleTextView
            android:id="@+id/eventTitle3"
            android:layout_weight="1.1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:text="12132313asdasdasdasdasd"
            android:layout_marginBottom="1dp" />

        <ImageView
            android:id="@+id/eventDots"
            android:layout_weight="0.7"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:src="@drawable/dot"
            android:layout_marginBottom="1dp"/>

        </LinearLayout>

</RelativeLayout>