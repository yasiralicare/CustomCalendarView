<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/container">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/textViewEventTitle"
            android:textSize="25sp"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/imageViewEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@android:drawable/ic_menu_delete"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageViewEdit"
            android:layout_toStartOf="@+id/imageViewEdit" />

    </RelativeLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"/>

    <include android:id="@+id/eventDetailItem1" layout="@layout/event_detail_item" />
    <!-- <include android:id="@+id/eventDetailItem2" layout="@layout/event_detail_item" /> -->
    <include android:id="@+id/eventDetailItem3" layout="@layout/event_detail_item" />



</LinearLayout>